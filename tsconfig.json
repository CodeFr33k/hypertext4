{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": "src"
  },
  "include": [
    "src/**/*",
    "server/**/*",
    "github.com/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
